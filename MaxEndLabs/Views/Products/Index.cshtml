@model IEnumerable<MaxEndLabs.ViewModels.ProductIndexViewModel>
@{
	ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
	<h2>Categories</h2>
	@if (User.IsInRole("Admin"))
	{
		<a asp-controller="Products" asp-action="Create" class="btn btn-primary">
			<i class="fas fa-plus"></i> New Product
		</a>
	}
</div>

<div class="row">
	@foreach (var category in Model)
	{
		<div class="col-md-4 mb-4">
			<div class="card h-100">
				<img src="~/images/@(category.Slug).jpg" class="card-img h-100" style="object-fit"/>
				<a class="stretched-link" asp-controller="Products" asp-action="ByCategory" asp-route-slug="@category.Slug"></a>
			</div>
		</div>
	}
	<div class="col-md-4 mb-4">
		<div class="card h-100">
			<img src="~/images/all-products.jpg" class="card-img h-100" style="object-fit"/>
			<a class="stretched-link" asp-controller="Products" asp-action="AllProducts"></a>
		</div>
	</div>
</div>