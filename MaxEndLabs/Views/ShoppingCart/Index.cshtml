@model MaxEndLabs.ViewModels.ShoppingCartIndexViewModel

<div class="container mt-5">
    <h2 class="mb-4"><i class="bi bi-cart3"></i> Your Shopping Cart</h2>

    @if (!Model.CartItems.Any())
    {
        <div class="text-center py-5">
            <h4 class="text-muted">Your cart is empty.</h4>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">
                Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th class="text-end">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartItem in Model.CartItems)
                                {
                                    <tr>
                                        <td>
	                                        <div class="d-flex align-items-center">
		                                        @if (string.IsNullOrEmpty(cartItem.MainImageUrl))
		                                        {
                                                                <img src = "~/images/default_product_image.jpg" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="@cartItem.ProductName"/>
		                                        }
		                                        else
		                                        {
                                                                <img src="@cartItem.MainImageUrl" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" alt="@cartItem.ProductName">
		                                        }
		                                        <div class="ms-3">
			                                        <p class="fw-bold mb-0">@cartItem.ProductName</p>
			                                        <small class="text-muted">Option: @cartItem.VariantName</small>
		                                        </div>
	                                        </div>
                                        </td>
                                        <td>€@cartItem.UnitPrice.ToString("F2")</td>
                                        <td>
                                            <span class="badge bg-secondary">@cartItem.Quantity</span>
                                        </td>
                                        <td class="text-end fw-bold">€@((cartItem.UnitPrice * cartItem.Quantity).ToString("F2"))</td>
                                        <td class="text-end">
                                            <form asp-action="RemoveFromCart" method="post">
	                                            <input type="hidden" name="ProductVariantId" value="@cartItem.ProductVariantId" />
	                                            <input type="hidden" name="ProductId" value="@cartItem.ProductId" />
	                                            <input type="hidden" name="CartId" value="@Model.CartId" />
                                                <button type="submit" class="btn btn-sm">
                                                            <img src="~/images/remove-button.jpg" class="nav-logo"/>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0 p-4">
                    <h4 class="mb-3">Order Summary</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal</span>
                        <span>€@Model.TotalPrice</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold fs-5">Total</span>
                        <span class="fw-bold fs-5 text-primary">€@Model.TotalPrice</span>
                    </div>

                        <a asp-action="Checkout" asp-route-cartId="@Model.CartId" class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                        Proceed to Checkout
						</a>
                    
                    <a asp-controller="Home" asp-action="Index" class="btn btn-link w-100 mt-2 text-decoration-none text-muted">
                        <i class="bi bi-arrow-left"></i> Keep Shopping
                    </a>
                </div>
            </div>
        </div>
    }
</div>
